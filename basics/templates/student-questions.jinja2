sel_ques_q.value = ques
alert('three')
var sel_mea = document.getElementById('meaval')
alert('threeone')
var mea = sel_mea.options[sel_mea.selectedIndex].text
alert('threetwo')
var sel_mea_q = document.getElementById('sel_mea')
alert('threethree')
sel_mea_q.value = mea

alert('four')
var submit = document.getElementById('submit')
submit.click()
alert('five')
}
</script>
</body>
</html>
